{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "faction_slug": {
            "type": "string",
            "enum": [
                "banner-lords",
                "barbarians",
                "dark-elves",
                "demonspawn",
                "high-elves",
                "knight-revenant",
                "lizardmen",
                "ogryn-tribes",
                "orcs",
                "sacred-order",
                "skinwalker",
                "undead-hordes"
            ]
        },
        "faction_name": {
            "type": "string",
            "enum": [
                "Banner-Lords",
                "Barbarians",
                "Dark Elves",
                "Demonspawn",
                "High Elves",
                "Knight Revenant",
                "Lizardmen",
                "Ogryn-Tribes",
                "Orcs",
                "Sacred Order",
                "Skinwalker",
                "Undead Hordes"
            ]
        },
        "slug": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
        },
        "faction": {
            "type": "object",
            "required": [
                "name",
                "slug",
                "website_link",
                "image_slug",
                "number_of_champions",
                "default_description",
                "seo"
            ],
            "properties": {
                "name": {
                    "$ref": "#/definitions/faction_name"
                },
                "slug": {
                    "$ref": "#/definitions/faction_slug"
                },
                "website_link": {
                    "type": "string"
                },
                "image_slug": {
                    "$ref": "#/definitions/slug"
                },
                "number_of_champions": {
                    "type": "integer"
                },
                "default_description": {
                    "type": "string"
                },
                "seo": {
                    "$ref": "#/definitions/seo"
                }
            }
        },
        "aura": {
            "type": "object",
            "required": [
                "raw_description",
                "effects"
            ],
            "properties": {
                "raw_description": {
                    "type": "string"
                },
                "effects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/status_effect"
                    }
                }
            }
        },
        "skill": {
            "type": "object",
            "required": [
                "raw_description",
                "slug",
                "name",
                "effects",
                "damaged_based_on"
            ],
            "properties": {
                "slug": {
                    "$ref": "#/definitions/slug"
                },
                "name": {
                    "type": "string"
                },
                "raw_description": {
                    "type": "string"
                },
                "damage_based_on": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "ATK",
                            "DEF",
                            "HP",
                            "SPD",
                            "Enemy MAX HP"
                        ]
                    }
                },
                "effects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/status_effect"
                    }
                }
            }
        },
        "status_effect": {
            "type": "object",
            "required": [
                "value",
                "type",
                "effect_type",
                "website_link",
                "image_slug",
                "slug"
            ],
            "properties": {
                "slug": {
                    "$ref": "#/definitions/slug"
                },
                "image_slug": {
                    "$ref": "#/definitions/slug"
                },
                "website_link": {
                    "type": "string"
                },
                "value": {
                    "type": "number"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "HP Burn",
                        "Poison",
                        "Decrease DEF",
                        "Decrease ACC",
                        "Decrease SPD",
                        "Decrease ATK",
                        "Weaken",
                        "Sleep",
                        "Provoke",
                        "Freeze",
                        "Block Cooldown Skills",
                        "Bomb",
                        "Stun",
                        "Block Buffs",
                        "Revive on Death",
                        "Heal Reduction",
                        "Leech",
                        "Debuff Spread",
                        "Increase C. RATE",
                        "Shield",
                        "Ally Protection",
                        "Reflect Damage",
                        "Increase DEF",
                        "Increase SPD",
                        "Increase ATK",
                        "Continuous Heal",
                        "Counterattack",
                        "Unkillable",
                        "Block Debuffs",
                        "Block Damage"
                    ]
                },
                "effect_type": {
                    "type": "string",
                    "enum": [
                        "buff",
                        "debuff"
                    ]
                }
            }
        },
        "seo": {
            "type": "object",
            "required": [
                "title",
                "description",
                "keywords"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "characteristics": {
            "type": "object",
            "required": [
                "hp",
                "attack",
                "defense",
                "speed",
                "critical_rate",
                "critical_damage",
                "resistance",
                "accuracy"
            ],
            "properties": {
                "hp": {
                    "type": "integer"
                },
                "attack": {
                    "type": "integer"
                },
                "defense": {
                    "type": "integer"
                },
                "speed": {
                    "type": "integer"
                },
                "critical_rate": {
                    "type": "number"
                },
                "critical_damage": {
                    "type": "number"
                },
                "resistance": {
                    "type": "integer"
                },
                "accuracy": {
                    "type": "integer"
                }
            }
        },
        "rating_value": {
            "type": "string",
            "enum": [
                "",
                "D",
                "C",
                "B",
                "A",
                "S",
                "SS"
            ]
        },
        "rating": {
            "type": "object",
            "required": [
                "overall",
                "campaign",
                "arena_offense",
                "arena_defense",
                "clan_boss_without_giant_slayer",
                "clan_boss_with_giant_slayer",
                "ice_guardian",
                "dragon",
                "spider",
                "fire_knight",
                "minotaur",
                "force_dungeon",
                "void_dungeon",
                "spirit_dungeon",
                "magic_dungeon"
            ],
            "properties": {
                "overall": {
                    "$ref": "#/definitions/rating_value"
                },
                "campaign": {
                    "$ref": "#/definitions/rating_value"
                },
                "arena_offense": {
                    "$ref": "#/definitions/rating_value"
                },
                "arena_defense": {
                    "$ref": "#/definitions/rating_value"
                },
                "clan_boss_without_giant_slayer": {
                    "$ref": "#/definitions/rating_value"
                },
                "clan_boss_with_giant_slayer": {
                    "$ref": "#/definitions/rating_value"
                },
                "ice_guardian": {
                    "$ref": "#/definitions/rating_value"
                },
                "dragon": {
                    "$ref": "#/definitions/rating_value"
                },
                "spider": {
                    "$ref": "#/definitions/rating_value"
                },
                "fire_knight": {
                    "$ref": "#/definitions/rating_value"
                },
                "minotaur": {
                    "$ref": "#/definitions/rating_value"
                },
                "force_dungeon": {
                    "$ref": "#/definitions/rating_value"
                },
                "magic_dungeon": {
                    "$ref": "#/definitions/rating_value"
                },
                "spirit_dungeon": {
                    "$ref": "#/definitions/rating_value"
                },
                "void_dungeon": {
                    "$ref": "#/definitions/rating_value"
                }
            }
        },
        "review": {
            "type": [
                "object",
                "null"
            ],
            "required": [
                "amount",
                "campaign",
                "arena_offense",
                "arena_defense",
                "clan_boss",
                "ice_guardian",
                "dragon",
                "spider",
                "fire_knight",
                "minotaur",
                "force_dungeon",
                "void_dungeon",
                "spirit_dungeon",
                "magic_dungeon"
            ],
            "properties": {
                "amount": {
                    "type": "integer"
                },
                "campaign": {
                    "$ref": "#/definitions/review_value"
                },
                "arena_offense": {
                    "$ref": "#/definitions/review_value"
                },
                "arena_defense": {
                    "$ref": "#/definitions/review_value"
                },
                "clan_boss": {
                    "$ref": "#/definitions/review_value"
                },
                "ice_guardian": {
                    "$ref": "#/definitions/review_value"
                },
                "dragon": {
                    "$ref": "#/definitions/review_value"
                },
                "spider": {
                    "$ref": "#/definitions/review_value"
                },
                "fire_knight": {
                    "$ref": "#/definitions/review_value"
                },
                "minotaur": {
                    "$ref": "#/definitions/review_value"
                },
                "force_dungeon": {
                    "$ref": "#/definitions/review_value"
                },
                "magic_dungeon": {
                    "$ref": "#/definitions/review_value"
                },
                "spirit_dungeon": {
                    "$ref": "#/definitions/review_value"
                },
                "void_dungeon": {
                    "$ref": "#/definitions/review_value"
                }
            }
        },
        "review_value": {
            "type": "number",
            "min": 0.0,
            "max": 5.0
        },
        "build": {
            "type": "object",
            "required": [],
            "properties": {}
        }
    },
    "type": "object",
    "required": [
        "name",
        "rarity",
        "element",
        "type",
        "rating",
        "slug",
        "characteristics",
        "auras",
        "skills",
        "faction",
        "faction_slug",
        "website_link",
        "image_slug",
        "seo",
        "default_description",
        "recommended_builds"
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "rarity": {
            "type": "string",
            "enum": [
                "Common",
                "Uncommon",
                "Rare",
                "Epic",
                "Legendary"
            ]
        },
        "element": {
            "type": "string",
            "enum": [
                "Magic",
                "Force",
                "Void",
                "Spirit",
                ""
            ]
        },
        "type": {
            "type": "string",
            "enum": [
                "HP",
                "Attack",
                "Assist",
                "Def",
                ""
            ]
        },
        "rating": {
            "$ref": "#/definitions/rating"
        },
        "slug": {
            "$ref": "#/definitions/slug"
        },
        "characteristics": {
            "type": "object",
            "required": [
                "60"
            ],
            "properties": {
                "60": {
                    "$ref": "#/definitions/characteristics"
                }
            }
        },
        "auras": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/aura"
            }
        },
        "skills": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/skill"
            }
        },
        "faction": {
            "$ref": "#/definitions/faction"
        },
        "faction_slug": {
            "$ref": "#/definitions/slug"
        },
        "website_link": {
            "type": "string"
        },
        "image_slug": {
            "$ref": "#/definitions/slug"
        },
        "seo": {
            "$ref": "#/definitions/seo"
        },
        "default_description": {
            "type": "string"
        },
        "recommended_builds": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/build"
            }
        },
        "lore": {
            "type": "string",
            "pattern": "^(<p>.+<\/p>)?$"
        },
        "reviews": {
            "$ref": "#/definitions/review"
        }
    }
}